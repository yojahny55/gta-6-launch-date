{
  "name": "gta6-tracker",
  "version": "0.1.0",
  "description": "GTA 6 Launch Date Prediction Tracker - Community-driven prediction platform",
  "type": "module",
  "scripts": {
    "dev": "npm run css:build && wrangler dev",
    "css:build": "npx @tailwindcss/cli@latest -i ./public/styles.css -o ./public/styles.built.css --minify",
    "css:watch": "npx @tailwindcss/cli@latest -i ./public/styles.css -o ./public/styles.built.css --watch",
    "build": "npm run css:build && vite build && tsc",
    "test": "npm run test:unit && npm run test:workers",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:unit:watch": "vitest --config vitest.config.unit.ts",
    "test:workers": "vitest run --config vitest.config.ts",
    "test:workers:watch": "vitest --config vitest.config.ts",
    "test:coverage": "vitest --coverage --config vitest.config.unit.ts",
    "validate": "npm run format:check && npm run lint && npm run build && npm run test",
    "predeploy": "npm run validate",
    "deploy": "wrangler deploy",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "db:seed": "tsx scripts/seed-db.ts",
    "db:clean": "tsx scripts/clean-db.ts"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "dayjs": "^1.11.19",
    "hono": "^4.10.0",
    "js-cookie": "^3.0.5",
    "tailwindcss": "^4.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.7",
    "@cloudflare/workers-types": "latest",
    "@tailwindcss/cli": "^4.1.17",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "prettier": "^3.0.0",
    "terser": "^5.44.1",
    "tsx": "^4.20.6",
    "typescript": "latest",
    "vite": "^5.0.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.48.0",
    "yaml": "^2.8.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
